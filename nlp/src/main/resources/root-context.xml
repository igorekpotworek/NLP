<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	<context:component-scan base-package="pl.edu.agh.nlp" />



	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="${jdbc.driverClassName}"/>
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>
	
	<bean id="articlesDao" class="pl.edu.agh.nlp.model.dao.ArticlesDao">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="topicsWordsDao" class="pl.edu.agh.nlp.model.dao.TopicsWordsDao">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="topicsDao" class="pl.edu.agh.nlp.model.dao.TopicsDao">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="topicArticleDao" class="pl.edu.agh.nlp.model.dao.TopicArticleDao">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<context:property-placeholder location="classpath:jdbc.properties" />
		
</beans>
